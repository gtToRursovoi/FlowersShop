<UserControl x:Class="AplicationApp.View.Pagess.User.ProductPageUser"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplicationApp.View.Pagess.User"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="#F9F9F9">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="🛒 Список товаров" 
                   FontSize="28" 
                   FontWeight="Bold" 
                   Foreground="#37474F" 
                   Margin="20,20,20,10"
                   Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding Products}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel IsItemsHost="True" Margin="10" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border CornerRadius="12"
                                BorderBrush="#E0E0E0"
                                BorderThickness="1"
                                Background="White"
                                Width="320"
                                Margin="10"
                                Padding="12">
                            <Border.Effect>
                                <DropShadowEffect BlurRadius="8" ShadowDepth="2" Opacity="0.2"/>
                            </Border.Effect>
                            <StackPanel>
                                <Image Source="{Binding ImageUrl}"
                                       Height="180"
                                       Stretch="UniformToFill"
                                       Margin="0,0,0,12"
                                       ClipToBounds="True">
                                    <Image.Clip>
                                        <RectangleGeometry RadiusX="10" RadiusY="10" Rect="0,0,300,180"/>
                                    </Image.Clip>
                                </Image>

                                <TextBlock Text="{Binding Name}" 
                                           FontSize="18" 
                                           FontWeight="SemiBold" 
                                           Foreground="#263238"/>
                                <TextBlock Text="{Binding Description}" 
                                           FontSize="13" 
                                           Foreground="#607D8B" 
                                           TextWrapping="Wrap" 
                                           Margin="0,4,0,4"/>
                                <TextBlock Text="{Binding Price, StringFormat=Цена: {0:C}}" 
                                           FontSize="15" 
                                           Foreground="#388E3C" 
                                           FontWeight="Bold"/>

                                <Button Content="Добавить в корзину"
                                        Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                        CommandParameter="{Binding}"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        FontWeight="SemiBold"
                                        FontSize="14"
                                        Margin="0,10,0,0"
                                        Padding="6,4"
                                        BorderThickness="0"
                                        Cursor="Hand"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10" Grid.Row="2">
            <Button Content="🔄 Обновить"
                    Width="120" 
                    Height="36" 
                    Background="#607D8B" 
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"/>
        </StackPanel>
    </Grid>
</UserControl>
