<Window x:Class="AplicationApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicationApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="930" 
          Background="#FFF0E6FF">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопками -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" Margin="0,10" >
            <Button Content="Продукты" Width="140" Height="42"
                    Background="Gray" Foreground="White" 
                    FontWeight="SemiBold" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OpenProductClick"
                    Padding="10"
                   
                    />

            <Button Content="Юзеры" Width="140" Height="42"
                    Background="Gray" Foreground="White" 
                    FontWeight="SemiBold" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OpenUserClick"
                    Padding="10"
                   
                    />

            <Button Content="Заказы" Width="140" Height="42"
                    Background="Gray" Foreground="White" 
                    FontWeight="SemiBold" 
                    BorderThickness="0"
                    Cursor="Hand"
                    Click="OpenOrdersClick"
                    Padding="10"
                  
                    />
        </StackPanel>

        <!-- Фрейм для отображения страниц -->
        <Frame x:Name="MainFrame" Grid.Row="1" Margin="0,20,0,0"
               Background="White" 
               
               BorderBrush="#D1C4E9"
               BorderThickness="1"/>
    </Grid>
</Window>
